  <%= simple_form_for([@costume, @booking]) do |f| %>

    <div data-controller="datepicker">

      <%= f.input :start_date, as: :hidden, input_html: { data: { datepicker_target: "startDate" } } %>
      <%= f.input :end_date, as: :hidden, input_html: { data: { datepicker_target: "endDate" } } %>

      <div class="form-group mb-5">
        <input type="text" data-datepicker-target="dateRange" class="form-control" placeholder= "Select here your dates...">
      </div>

    </div>

    <%= f.submit "Book Now", class: "btn btn-primary w-100", data: { bs_toggle: "modal", bs_target: "#confirmation-modal" } %>


  <% end %>
