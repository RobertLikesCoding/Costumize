<div class="container mt-4">
    <%= link_to "Back To Overview", costumes_path, class: "link-offset-2" %>
  <div class="card my-4">
    <div class="row g-0">
      <div class="col-md-12 col-lg-6">
        <% if @costume.photos.present? %>
          <div id="carousel<%= @costume.id %>" class="carousel slide" data-bs-ride="true" data-bs-wrap="false">
            <div class="carousel-inner">
              <% @costume.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= cl_image_tag photo.key, class: "d-block w-100", alt: @costume.name %>
                  <span class="position-absolute top-0 end-0 badge rounded-pill text-bg-secondary fw-medium bg-white text-dark m-4 p-3 fs-5">
                    <%= @costume.price_per_day %>â‚¬/Day
                  </span>
                </div>
              <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= @costume.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= @costume.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        <% else %>
          <img src="https://via.placeholder.com/300" class="card-img-top" alt="No image available">
        <% end %>
      </div>
      <div class="col-md-12 col-lg-6">
        <div class="card-body d-flex h-100 flex-column justify-content-between">
          <div>
            <div class="d-flex justify-content-between align-items-center">
              <h2 class="card-title"><%= @costume.name %></h2>
              <h5 class=" p-1 rounded-4"><i class="fa-solid fa-shirt"></i> <strong><%= @costume.size %></strong></h5>
            </div>
            <p class="card-text"><%= @costume.description %></p>
          </div>
          <div class="mt-auto w-100">
            <%= link_to "Rent this costume", new_costume_booking_path(@costume), class: "btn btn-primary w-100" %>
            <%# Carmen, copy the attributes from this link to your form submit button! %>
            <button type="button" class="btn btn-success text-white" data-bs-toggle="modal" data-bs-target="#confirmation-modal">
              Modal placeholder
            </button>
            <%= render "shared/modal" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
