<div class="container mt-4">
  <%= link_to "Back To Overview", costumes_path, class: "link-offset-2" %>

  <div class="row row-cols-3 g-lg-s4 mt-5">

    <!---------------- part I: column of 5 square pictures --------------->

    <div class="col-md-2 d-flex flex-column align-items-center bg-primary">

        <% if @costume.photos.present? %>
          <% @costume.photos.each_with_index do |photo, index| %>
            <% break if index >= 5 %> <!-- column limited to 5 pictures -->
            <div class="mb-2 w-100">
                <%= cl_image_tag photo.key, class: "img-fluid square-image rounded-5", alt: @costume.name %>
            </div>
          <% end %>
        <% end %>

    </div>

    <!------------------ part II: large middle picture ------------------>

    <div class="col-5 bg-danger mx-4">
      <% if @costume.photos.present? %>
        <div id="carousel<%= @costume.id %>" class="carousel slide" data-bs-ride="true" data-bs-wrap="false">
          <div class="carousel-inner">
            <% @costume.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= cl_image_tag photo.key, class: "d-block w-100 rounded-5", alt: @costume.name %>
                <span class="position-absolute top-0 end-0 badge rounded-pill text-bg-secondary fw-medium bg-white text-dark m-4 p-3 fs-5">
                  <%= @costume.price_per_day %>â‚¬/Day
                </span>
              </div>
            <% end %>
          </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= @costume.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>

          <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= @costume.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

      <% else %>
        <img src="https://via.placeholder.com/300" class="card-img-top" alt="No image available">
      <% end %>

    </div>

    <!------------------ part III: text and booking button ------------------>

    <div class="col bg-warning rounded-5">
      <div class="card-body d-flex h-100 flex-column justify-content-between">
        <div>
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="card-title"><%= @costume.name %></h2>
            <h5 class=" p-1 rounded-4"><i class="fa-solid fa-shirt"></i> <strong><%= @costume.size %></strong></h5>
          </div>
            <p class="card-text"><%= @costume.description %></p>
          </div>
          <div class="mt-auto w-100">
            <%= render "shared/booking_form", costume: @costume, start_date: @start_date, end_date: @end_date %>
            <%= render "shared/modal" %>
          </div>
        </div>
      </div>
    </div>

</div>
