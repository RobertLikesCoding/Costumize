<div class="container mt-4" data-controller="image-switcher">
  <div class="row justify-content-center">
    <div> <!-- to make the product card smaller! -->
      <%= link_to "Back To Overview", costumes_path, class: "link-offset-2 pt-3" %>

      <% if @costume.photos.present? && @costume.photos.size > 1 %>
        <div class="row equal-height-row my-5 d-flex">

          <!---------------- part I: column of 3 square pictures --------------->
          <div class="col-md-2 d-flex flex-column align-items-center gap-3 p-0">
            <% @costume.photos.first(3).each_with_index do |photo, index| %>
              <div class="photo-container">
                <%= cl_image_tag photo.key, class: "rounded-5 img-fluid", data: { action: "click->image-switcher#changeImage", image_url: cl_image_path(photo.key), image_alt: @costume.name, image_switcher_target: "thumbnail" } %>
              </div>
            <% end %>
          </div>

          <!------------------ part II: large middle picture ------------------->
          <div class="col-5 mx-4 position-relative p-0" style="width: 500px;">
            <%= cl_image_tag @costume.photos.first.key, class: "rounded-5", alt: @costume.name, data: { image_switcher_target: "mainImage" } %>
          </div>

          <!------------------ part III: text and booking button ------------------>
          <div class="col border border-3 border-black bg-white rounded-5 p-4">
            <div class="card-body d-flex h-100 flex-column justify-content-between">
              <div>
                <div>
                  <h3 class="card-title fw-semibold pt-0 fs-4"><%= @costume.name %></h3>
                  <div>
                    <p class="p-1 mt-2 rounded-4"><i class="fa-solid fa-shirt"></i> <strong><%= @costume.size %></strong></p>
                    <strong><p class="mb-0 mt-5">Offered by: </p></strong>
                    <p class="mt-0"><%= @costume.user.first_name %> <%= @costume.user.last_name %></p>
                  </div>
                </div>
                <div>
                  <strong><p class="mt-4 mb-0">Description:</p></strong>
                  <p class="pt-0 mt-0"><%= @costume.description %></p>
                </div>
              </div>

              <div class="mt-5 w-100">
                <div class="pb-0">
                  <div class="mt-5">
                    <h4 class="border-bottom border-3 border-black pb-2 fw-semibold fs-4 mb-5"><%= @costume.price_per_day %> €/day</h4>
                    <% if @costume.user.present? %>
                    <% end %>
                  </div>
                  <%= render "shared/booking_form", costume: @costume, start_date: @start_date, end_date: @end_date, class: "pb-5" %>
                </div>
                <%= render "shared/modal" %>
              </div>
            </div>
          </div>
        </div>

      <% else %>

        <!-- If there are no photos or only one photo, display the large photo and product info -->
        <div class="row my-5 equal-height-row">
          <!------------------ part II: large middle picture ------------------->
          <div class="col-6 mx-auto position-relative" style="width: 500px;">
            <% if @costume.photos.present? %>
              <%= cl_image_tag @costume.photos.first.key, class: "w-100 h-100 rounded-5", style: "object-fit: cover;", alt: @costume.name, data: { image_switcher_target: "mainImage" } %>
            <% else %>
              <img src="https://via.placeholder.com/300" class="w-100 h-100 rounded-5" style="object-fit: cover;" alt="No image available" data-image-switcher-target="mainImage">
            <% end %>
            <span class="position-absolute top-0 end-0 badge rounded-pill text-bg-secondary fw-medium bg-white text-dark m-4 p-3 fs-5">
              <%= @costume.price_per_day %>€/Day
            </span>
          </div>

          <!------------------ part III: text and booking button ------------------>
          <div class="col border border-1 border-black bg-white rounded-5 p-4">
            <div class="card-body d-flex h-100 flex-column justify-content-evenly">
              <div>
                <div>
                  <h3 class="card-title pt-4 fw-semibold fs-4"><%= @costume.name %></h3>
                  <h5 class="p-1 mt-3 rounded-4"><i class="fa-solid fa-shirt"></i> <strong><%= @costume.size %></strong></h5>
                </div>
                <div class="mt-5">
                  <h4 class="border-bottom border-2 border-black pb-2 fw-semibold fs-3"><%= @costume.price_per_day %> €/day</h4>
                  <% if @costume.user.present? %>
                    <p class="card-text pt-4">Offered by <%= @costume.user.first_name %> <%= @costume.user.last_name %></p>
                  <% end %>
                </div>
              </div>

              <div class="mt-5 w-100">
                <div class="pb-5">
                  <%= render "shared/booking_form", costume: @costume, start_date: @start_date, end_date: @end_date, class: "pb-5" %>
                </div>
                <%= render "shared/modal" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
